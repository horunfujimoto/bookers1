<h1>Books</h1>
<% @books.each do |book| %> <!--Bookレコードの数だけ順番に取得して繰り返し処理-->

  <p>Title</p> <!--ここ後で消すかも-->
  <span><%= book.title %></span>
  <p>Body</p> <!--ここ後で消すかも-->
  <span><%= book.body %></span>

<%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %> <!--@bookにすると、エラー-->
<%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

<% end %>

<!--新規投稿部分-->
<h2>New book</h2>

<!--バリデーション部分-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--form_with部分-->
<%= form_with model: @book, url: '/books', method: :post do |f| %> <!--@bookはbooks.controllerとつなぐインスタンス変数-->
  <p>Title</p>
  <%= f.text_field :title %> <!--text_field＝単一行のテキストフィールド-->

  <p>Body</p>
  <%= f.text_area :body %> <!--text_area＝複数行のテキストフィールド-->

  <%= f.submit 'Create Book' %> <!--submit＝送信ボタン-->
<% end %>

