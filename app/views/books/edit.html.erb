<!--編集-->
<h2>Editing Book</h2>

<!--バリデーション部分-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--form_with部分-->
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %> <!--@bookはbooks.controllerとつなぐインスタンス変数-->
  <p>Title</p>
  <%= f.text_field :title %> <!--text_field＝単一行のテキストフィールド-->

  <p>Body</p>
  <%= f.text_area :body %> <!--text_area＝複数行のテキストフィールド-->

  <%= f.submit 'Update Book' %> <!--submit＝送信ボタン-->

<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>